{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "refresh": {
      "userIds": [],
      "action": {
        "type": "Action.Execute",
        "verb": "refresh",
        "title": "Refresh",
        "data": {
          "pdtId": "${productId}",
          "pdtName":"${productName}",
          "categoryId":"${categoryId}"
        }
      }
    },
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 2,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${productName}",
                            "weight": "Bolder",
                            "size": "ExtraLarge",
                            "spacing": "None"
                        },
                        {
                          "type": "TextBlock",
                          "text": "Existing stock",
                          "wrap": true
                      },
                        {
                            "type": "TextBlock",
                            "text": "${unitsInStock}",
                            "isSubtle": true,
                            "spacing": "None"
                        },
                        {
                            "type": "TextBlock",
                            "text": "New stock",
                            "wrap": true
                        },
                        {
                            "type": "Input.Text",
                            "id": "txtStock",
                            "placeholder": "0",
                            "style": "Tel"
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                              {
                                  "type": "Action.Execute",
                                  "title": "Update stock",
                                  "verb": "ok",
                                  "data": {
                                    "pdtId": "${productId}",
                                    "pdtName":"${productName}",
                                    "categoryId":"${categoryId}"
                                  },
                                  "style": "positive"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "Image",
                            "url": "${imageUrl}"
                        }
                    ]
                }
            ]
        }
    ]
  } 